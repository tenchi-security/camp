{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket",
                "s3:Get*",
                "s3:PutObject",
                "s3:PutObjectAcl",
                "s3:*MultipartUpload*"
            ],
            "Sid": "1",
            "Resource": [
                "*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "sns:Publish"
            ],
            "Sid": "2",
            "Resource": [
                "*"
            ]
        }
    ]
}