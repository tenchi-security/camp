{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "DRTAccessProtectedResources",
            "Effect": "Allow",
            "Action": [
                "cloudfront:List*",
                "elasticloadbalancing:List*",
                "route53:List*",
                "cloudfront:Describe*",
                "elasticloadbalancing:Describe*",
                "route53:Describe*",
                "cloudwatch:Describe*",
                "cloudwatch:Get*",
                "cloudwatch:List*",
                "cloudfront:GetDistribution*"
            ],
            "Resource": [
                "arn:aws:elasticloadbalancing:*:*:*",
                "arn:aws:cloudfront::*:*",
                "arn:aws:route53:::hostedzone/*",
                "arn:aws:cloudwatch:*:*:*:*"
            ]
        },
        {
            "Sid": "DRTManageMitigations",
            "Effect": "Allow",
            "Action": [
                "waf:*",
                "waf-regional:*"
            ],
            "Resource": [
                "arn:aws:waf:*",
                "arn:aws:waf-regional:*"
            ]
        },
        {
            "Sid": "DRTManageProtections",
            "Effect": "Allow",
            "Action": [
                "shield:*"
            ],
            "Resource": "*"
        }
    ]
}