{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "macie2:*"
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": "iam:CreateServiceLinkedRole",
            "Resource": "arn:aws:iam::*:role/aws-service-role/macie.amazonaws.com/AWSServiceRoleForAmazonMacie",
            "Condition": {
                "StringLike": {
                    "iam:AWSServiceName": "macie.amazonaws.com"
                }
            }
        },
        {
            "Effect": "Allow",
            "Action": "pricing:GetProducts",
            "Resource": "*"
        }
    ]
}