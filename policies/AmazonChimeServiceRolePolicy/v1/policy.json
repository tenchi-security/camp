{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "iam:CreateServiceLinkedRole"
            ],
            "Resource": [
                "arn:aws:iam::*:role/aws-service-role/chime.amazonaws.com/AWSServiceRoleForAmazonChime"
            ],
            "Condition": {
                "StringLike": {
                    "iam:AWSServiceName": "chime.amazonaws.com"
                }
            }
        }
    ]
}