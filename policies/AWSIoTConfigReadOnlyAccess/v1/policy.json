{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "iot:DescribeCertificate",
                "iot:DescribeEndpoint",
                "iot:DescribeThing",
                "iot:GetLoggingOptions",
                "iot:GetPolicy",
                "iot:GetPolicyVersion",
                "iot:GetTopicRule",
                "iot:ListCertificates",
                "iot:ListPolicies",
                "iot:ListPolicyVersions",
                "iot:ListPrincipalPolicies",
                "iot:ListPrincipalThings",
                "iot:ListThingPrincipals",
                "iot:ListThings",
                "iot:ListTopicRules"
            ],
            "Resource": "*"
        }
    ]
}