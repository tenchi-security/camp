{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowBeanstalkManageSNS",
            "Effect": "Allow",
            "Action": [
                "sns:CreateTopic",
                "sns:SetTopicAttributes",
                "sns:DeleteTopic"
            ],
            "Resource": [
                "arn:aws:sns:*:*:ElasticBeanstalkNotifications-*"
            ]
        },
        {
            "Sid": "AllowSNSPublish",
            "Effect": "Allow",
            "Action": [
                "sns:GetTopicAttributes",
                "sns:Subscribe",
                "sns:Unsubscribe",
                "sns:Publish"
            ],
            "Resource": "*"
        }
    ]
}